@model OrdersReportApp.ViewModels.UpdatingOrderViewModel
<div id="updatingModal" class="modal fade" tabindex="1" role="dialog" aria-labelledby="updatingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 id="updatingModalLabel" class="modal-title">Редактирование заказа</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form class="custom-form" asp-action="UpdateOrder" asp-controller="Orders" asp-antiforgery="true" novalidate>
                <div class="modal-body">
                    <div class="form-group">
                        <input id="id" name="Id" type="hidden" class="form-control" asp-for="Id" value="Id"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date">Дата заказа</label>
                        <input id="date" name="Date" type="date" class="form-control" asp-for="Date" required />
                        <span class="invalid-feedback" asp-validation-for="Date"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Сумма зказа</label>
                        <input id="price" name="Price" type="text" class="form-control" asp-for="Price" required/>
                        <span class="invalid-feedback" asp-validation-for="Price"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Сохранить</button>
                        <button type="reset" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>